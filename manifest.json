{
    "manifest_version": 3,
    "name": "HackUSU Extension",
    "version": "1.0",
    "description": "Extension with a default side panel.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "host_permissions": [
    "<all_urls>"
    ],
    "permissions": [
        "tabs",
        "scripting",
        "sidePanel",
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "service_worker": "script.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}